%section
	%section
		%h2 Filtres et parcours
	
	%section#filter-selector
		%h3	Selon un sélecteur
		%p
			%tt .filter( selector )

		%pre
			%code.javascript
				:preserve
					$('section').filter('#filter-selector').css('background-color', 'red');
		/

	%section
		%h3 Selon une fonction
		%p
			%tt.filter-function .filter( function( index ) )

		%pre
			%code.javascript
				:preserve
					$('tt').filter(function(index) {
						return $(this).hasClass('filter-function');
					}).css('background-color', 'red');
		/

	%section#filter-element
		%h3 Selon un element
		%p
			%tt .filter( element )

		%pre
			%code.javascript
				:preserve
					$("section")
						.filter( document.getElementById('filter-element') )
						.css('background-color', 'red');
		/

	%section#filter-jquery
		%h3 Selon une autre collection d'objets
		%p
			%tt .filter( jQuery object )

		%pre
			%code.javascript
				:preserve
					$('section').filter( $('#filter-jquery') ).css('background-color', 'red');
		/

	%section
		%h3 Recherche

		%p
			%tt#find-tt .find( expr )
			%br/
			Cherche parmi les elements fils


		%pre
			%code.javascript
				:preserve
					$('section').find('tt#find-tt').css('background-color','red');
		/

%section
	%section
		%h2 Itérateurs

	%section
		%h3 Pour chaque
		
		%p
			%tt .each( expr )

		%pre
			%code.javascript
				:escaped
					$('section > h2').each( function() { 
						console.log(this.textContent); 
						} );
		/

	%section
		%h3 Association

		%p
			%tt .map( func )

		%pre
			%code.javascript
				:escaped
					var result = $('section > h2').map( function() { 
						return this.textContent; 
						} ).get();
					console.log(result);
			/

